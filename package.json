{
  "name": "aside",
  "version": "0.0.0",
  "private": true,
  "description": "Composable browser extension",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "yarn dev:app & yarn dev:recoil & yarn dev:chrome-ui",
    "dev:app": "yarn workspace app dev",
    "dev:recoil": "yarn workspace recoil-example dev",
    "dev:chrome-ui": "yarn workspace @aside/chrome-ui dev",
    "open-chrome": "yarn workspace app start:chromium",
    "clean-vite": "yarn workspace recoil clean-vite && yarn workspace app clean-vite",
    "storybook": "NODE_OPTIONS='--openssl-legacy-provider' start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "turbo run build",
    "turbo-dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "bundle-extension": "turbo run pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alxclark/aside.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alxclark/aside/issues"
  },
  "homepage": "https://github.com/alxclark/aside#readme",
  "dependencies": {
    "@remote-ui/react": "^5.0.0",
    "@remote-ui/rpc": "^1.4.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-reconciler": "0.26.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack4": "^6.5.16",
    "@storybook/manager-webpack4": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@types/react-dom": "^18.0.10",
    "@wide-web/eslint-plugin": "^0.1.0",
    "babel-loader": "^8.3.0",
    "eslint": "^8.3.0",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "workspaces": [
    "app",
    "packages/*",
    "examples/*"
  ]
}