{
  "name": "app",
  "displayName": "aside",
  "version": "0.0.9",
  "private": true,
  "packageManager": "pnpm@7.8.0",
  "license": "BSD-3-Clause",
  "description": "A modular browser extension for developers",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:content": "npm run build:content -- --mode development",
    "dev:background": "npm run build:background -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:content build:background",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:content": "vite build --config vite.config.content.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --start-url http://www.localhost:3000/ --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension/dist extension/manifest.json extension.*",
    "type-check": "tsc",
    "test": "vitest test",
    "clean-vite": "rm -rf ./node_modules/.vite"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.1.6",
    "@iconify/json": "^2.1.96",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.7.11",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@vitejs/plugin-react": "^2.0.1",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.22.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "jsdom": "^20.0.0",
    "kolorist": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "unplugin-auto-import": "^0.11.2",
    "vite": "^3.0.9",
    "web-ext": "^7.2.0",
    "webextension-polyfill": "^0.10.0",
    "tslib": "latest"
  },
  "dependencies": {
    "@aside/react": "0.7.4",
    "@aside/core": "0.7.3",
    "@aside/chrome-ui": "0.7.4",
    "react": "18.2.0",
    "@remote-ui/react": "5.0.2"
  }
}