{
  "name": "extension",
  "displayName": "aside",
  "description": "A modular browser extension for developers",
  "license": "MIT",
  "private": true,
  "version": "2.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alxclark/aside",
    "directory": "extension"
  },
  "scripts": {
    "build:content": "vite build --config ./configuration/vite.content.ts",
    "build:background": "vite build --config ./configuration/vite.background.ts",
    "build:extension": "vite build --config ./configuration/vite.extension.ts"
  },
  "dependencies": {
    "@aside/ui": "workspace:*",
    "fs-extra": "^11.2.0",
    "webextension-polyfill": "^0.12.0"
  },
  "browserslist": [
    "defaults and not dead"
  ],
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/webextension-polyfill": "^0.10.7",
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^5.3.2"
  }
}